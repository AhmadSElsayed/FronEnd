<Window x:Class="WpfApplication1.Views.BranchSelect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1.Views"
        mc:Ignorable="d"
        Title="BranchSelect" Height="300" Width="300" Background="Gray">
    <GroupBox Header="Select Branch" Padding="5">
        <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
                
            <ComboBox x:Name="branchSelector" Height="Auto" Width="Auto" Text="Select Branch to View..." MinWidth="200" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Button Click="Click_Click" Grid.Row="1" x:Name="Click" Content="Show Branch Data" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5" Margin="5"/>
        </Grid>
    </GroupBox>
</Window>
